<div id="like_<%= comment.class.name%>_<%= comment.id %>" >

<!-- like -->

(<%=count_like(comment)%>)

<% if current_user.is_liked(comment) %>
		<%= link_to "Liked" ,like_create_path(id: comment.id, type: comment.class.name), method: :post, remote: true %>
<% else %>
		<%= link_to "Like" ,like_create_path(id: comment.id, type: comment.class.name), method: :post, remote: true %>

<% end %>
<!-- dislike -->

<% if current_user.is_disliked(comment) %>
		<%= link_to "Disliked" ,dislike_create_path(id: comment.id, type: comment.class.name), method: :post, remote: true %>
<% else %>
		<%= link_to "Disike" ,dislike_create_path(id: comment.id, type: comment.class.name),
		 method: :post, remote: true %>

<% end %>

</div>

